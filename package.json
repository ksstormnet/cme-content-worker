{
	"name": "cme-content-worker",
	"description": "Cruise Made Easy Content Generation and Management System on Cloudflare Workers",
	"private": true,
	"cloudflare": {
		"label": "Vite React Template",
		"products": [
			"Workers"
		],
		"categories": [],
		"icon_urls": [
			"https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/5ca0ca32-e897-4699-d4c1-6b680512f000/public"
		],
		"preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/fc7b4b62-442b-4769-641b-ad4422d74300/public",
		"publish": true
	},
	"dependencies": {
		"hono": "4.8.2",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-router-dom": "^7.1.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.7.5",
		"@eslint/js": "9.29.0",
		"@types/node": "^24.0.4",
		"@types/react": "19.0.10",
		"@types/react-dom": "19.0.4",
		"@vitejs/plugin-react": "5.0.0",
		"concurrently": "^9.2.1",
		"eslint": "9.27.0",
		"eslint-plugin-react-hooks": "5.2.0",
		"eslint-plugin-react-refresh": "0.4.20",
		"globals": "16.2.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.35.0",
		"vite": "^6.0.0",
		"wrangler": "^4.38.0"
	},
	"scripts": {
		"build": "vite build",
		"cf-typegen": "wrangler types",
		"check": "tsc && vite build && wrangler deploy --dry-run",
		"deploy": "wrangler deploy",
		"dev": "node dev-control.js start",
		"dev:start": "node dev-control.js start",
		"dev:stop": "node dev-control.js stop",
		"dev:restart": "node dev-control.js restart",
		"dev:status": "node dev-control.js status",
		"dev:frontend": "vite",
		"dev:worker": "wrangler dev --remote",
		"dev:legacy": "concurrently \"npm run dev:frontend\" \"npm run dev:worker\"",
		"dev:bg": "echo 'Background session development mode - use Claude Bash tool with run_in_background: true for both npm run dev:frontend and npm run dev:worker'",
		"dev:bg-status": "echo 'Sessions: Vite (localhost:5174 - ALL routes) + Worker (localhost:8787 - API only)' && lsof -i:5174 -i:8787 | grep LISTEN",
		"dev:bg-stop": "pkill -f 'wrangler dev' && pkill -f vite && echo 'Background development sessions stopped'",
		"lint": "eslint .",
		"preview": "npm run build && vite preview"
	},
	"type": "module"
}
